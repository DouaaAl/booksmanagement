<html>
    <head>
        <style>
            table {
                display: flex;
                flex-direction: column;
                width: 80%;
                text-align: center;
                margin: 2rem auto;
            }
            #title{
                text-align: center;
                font-size: 40px;
                margin: 30px auto;
            }
            table tr,
            table th {
                display: grid;
                grid-template-columns: repeat(5, 1fr);
                text-align: center;
                justify-content: center;
                align-items: center;
                border: 1px solid rgb(129, 129, 129);
            }
        </style>
    </head>

    <body>
        <h3 id="title">Bill Report</h3>
        <table>
            <tr>
                <th>Name: <%= name %></th>
                <th>Email: <%= email %></th>
            </tr>
            <tr>
                <th>Contact Number: <%= contactNumber %></th>
                <th>Payment Method: <%= paymentMethod %></th>
            </tr>
        </table>
        <h3 style="text-align:center;">Product Details</h3>
        <table>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Sub Total</th>
            </tr>
        <% productDetails.map((product) => { %>
                <tr>
                    <th><%= product.price %></th>
                    <th><%= product.categoryId %></th>
                    <th><%= product.quantity %></th>
                    <th><%= product.price %></th>
                    <th><%= product.price * parseInt(product.quantity) %></th>
                </tr>
                <% }); %>
            </table>
        <h3 style="text-align:center">Total: <%= totalAmount %>$</h3>
        <h3>Thank you for visiting. Please visit again!</h3>
    </body>
</html>